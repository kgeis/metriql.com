{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://metriql.com/schema/report-options/sql.json",
    "title": "Sql Report Options",
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "query": {
        "type": "string"
      },
      "query_options": {
        "$ref": "#/definitions/QueryOptions"
      },
      "report_options": {
        "$ref": "#/definitions/ReportOptions"
      },
      "version": {
        "type": "number"
      }
    },
    "required": [
      "query"
    ],
    "definitions": {
      "QueryOptions": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "limit": {
            "type": "integer"
          },
          "default_database": {
            "type": "string"
          },
          "default_schema": {
            "type": "string"
          },
          "use_cache": {
            "type": "boolean"
          }
        }
      },
      "ReportOptions": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "measures": {
            "type": "array",
            "items": {
              "type": "integer"
            }
          },
          "dimensions": {
            "type": "array",
            "items": {
              "type": "integer"
            }
          },
          "pivots": {
            "type": "array",
            "items": {
              "type": "integer"
            }
          },
          "chartOptions": {},
          "tableOptions": {},
          "columnOptions": {
            "type": "array",
            "items": {}
          }
        }
      }
    }
  }